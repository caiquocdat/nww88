<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#52a2bd"
    tools:context="dat.mid.weather.fragment.LocationFragment">
    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/editTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:textSize="15sp"
                android:text="Edit"
                android:textColor="@color/white"/>
            <TextView
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:id="@+id/doneTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:textSize="15sp"
                android:text="Done"
                android:textColor="@color/white"/>
        </RelativeLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textSize="25sp"
            android:text="Location"
            android:textColor="@color/white"/>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/add_loc_brg"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/locationEdt"
                android:background="#00000000"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Add city name"
                android:textColorHint="#99EBEBF5"
                android:textSize="11dp"/>
            <ImageView
                android:id="@+id/searchImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/img_search"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/locationRcv"/>


    </LinearLayout>

</FrameLayout>