<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/topLinear"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/img_send"/>
        <TextView
            android:id="@+id/cityTv"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hà Nội"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"/>
        <ImageView
            android:layout_marginLeft="4dp"
            android:layout_marginTop="3dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/img_search_weather"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/itemRel"
        android:layout_below="@id/topLinear"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/detailInfoLinear"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/item_weather_brg"
            android:gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="60dp"
                android:id="@+id/tempTv"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="33°"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:textSize="60sp"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:gravity="center"
                   android:layout_weight="1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <TextView
                       android:id="@+id/tempMaxTv"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Max 33°"
                       android:textColor="@color/white"
                       android:fontFamily="@font/poppins"
                       android:textSize="7sp"/>
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:src="@drawable/img_line_weather"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Humidity"
                       android:textColor="@color/white"
                       android:fontFamily="@font/poppins"
                       android:textSize="7sp"/>
                   <TextView
                       android:id="@+id/humidityTv"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="64%"
                       android:textColor="@color/white"
                       android:fontFamily="@font/poppins"
                       android:textSize="7sp"/>
               </LinearLayout>
               <ImageView
                   android:id="@+id/weatherHourImg"
                   android:layout_weight="1"
                   android:layout_width="40dp"
                   android:layout_height="30dp"
                   android:src="@drawable/img_rain_sun"/>
               <LinearLayout
                   android:gravity="center"
                   android:layout_weight="1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <TextView
                       android:id="@+id/tempMinTv"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Min 33°"
                       android:textColor="@color/white"
                       android:fontFamily="@font/poppins"
                       android:textSize="7sp"/>
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:src="@drawable/img_line_weather"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Rain%"
                       android:textColor="@color/white"
                       android:fontFamily="@font/poppins"
                       android:textSize="7sp"/>
                   <TextView
                       android:id="@+id/rainTv"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="64%"
                       android:textColor="@color/white"
                       android:fontFamily="@font/poppins"
                       android:textSize="7sp"/>
               </LinearLayout>
           </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/conditionTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cao 33°"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:textSize="15sp"/>
                <ImageView
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_line_weather"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/windTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Average Wind 5km/h"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:textSize="7sp"/>
                <TextView
                    android:id="@+id/timeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15:00 TH7"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:textSize="7sp"/>
            </LinearLayout>


        </LinearLayout>
        <ImageView
            android:id="@+id/weatherIcon"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:src="@drawable/img_rain_sun"
            />


    </RelativeLayout>



</RelativeLayout>